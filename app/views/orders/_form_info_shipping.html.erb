<%= form_with(url: orders_path, method: :post) do |f| %>
<div class="col mb-2">
  <br>
  <br>
  <br>
  <br>
  <div class="row">
    <div class="col mb-2">
      <div class="">
        <div class="row">
          <div class="container-cart">

            <div class="row">
              <div class="col-50">
                <br>
                <h3><%= t("order.bill") %></h3>
                <%= f.label :name_shipping,t("order.user_shipping") %>
                <%= f.text_field :name_shipping, value: @user.name, type: "text" %>
                <%= f.label :phone_shipping,t("order.phone_shipping") %>
                <%= f.text_field :phone_shipping, value: @user.phone, type: "text" %>
                <%= f.label :address_shipping,t("order.address_shipping") %>
                <%= f.text_field :address_shipping, value: @user.address, type: "text" %>
              </div>

              <div class="col-50">
                <br>
                <br>
                <%= f.label :messages,t("order.messages") %>
                <%= f.text_area(:messages, rows: 5, class: "form-control")%>
              </div>
            </div>
          </div>
        </div>
        <br>
      </div>
    </div>

  </div>
  <div class="row">
    <div class="col-sm-12 col-md-6 text-left">
      <%= f.submit t("order.confirm"), class: "btn btn-lg btn-block btn-success text-uppercase" %>
    </div>
  </div>
</div>
<% end %>
